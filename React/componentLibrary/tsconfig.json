{
	"compilerOptions": {
		"declaration": true, // 生成 .d.ts 文件
		"declarationDir": "./dist", // 声明文件输出目录
		"outDir": "./dist", // 编译输出目录
		"rootDir": "./src", // 源代码根目录
		"module": "ESNext", // 使用 ESM 模块
		"lib": ["es2020", "dom", "dom.iterable"], // 添加 ES6+ 和 DOM 类型支持
		"target": "ES5", // 编译目标（允许源码用 ES6+）
		"jsx": "react", // 处理 JSX
		"esModuleInterop": true, // 兼容 CommonJS/ESM
		"moduleResolution": "node", // 模块解析策略
		"strict": true, // 启用严格类型检查
		"skipLibCheck": true // 跳过库类型检查
	},
	"include": ["src/**/*"], // 包含的文件
	"exclude": ["node_modules"]
}
