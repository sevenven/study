{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["DOM", "ESNext"],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["node", "jest", "@types/testing-library__jest-dom"]
	},
	"include": ["src", "setupTests.ts", "__tests__"],
	"exclude": ["node_modules"]
}
